doctype
html
    head
        script(src="/socket.io/socket.io.js")
        script(src="http://code.jquery.com/jquery-2.1.1.min.js")
        link(rel='stylesheet',href='../bootstrap.css')
        link(rel='stylesheet',href="../lib/bootstrap-material-design/dist/css/ripples.css")
        link(rel='stylesheet',href="../lib/bootstrap-material-design/dist/css/material-wfont.min.css")
        meta(name="viewport",content="width=device-width, initial-scale=1")

        style(type="text/css")
         |.maintext{
         |margin-top: 30px;
         |}
        
      
        

    body
        nav(class="navbar navbar-inverse", role="navigation")
            div( class="container-fluid")
                div(class="navbar-header")
                    a(class="navbar-brand withripple",href="#") ChatApp

        div( class="container-fluid")
            div(class="row")
                div(class="col-md-12 col-xs-12 col-sm-12 col-lg-12")
                    h2 Connect Everywhere 
                     i(class="mdi-action-face-unlock")
            
            div(class="row")
                div(class="col-md-6 col-xs-8 form-group")
                    input(type="text" id="idEmail" class="maintext form-control floating-label",placeholder="Enter your Email Id")
            div(class="row")
                div(class="col-md-6 col-xs-8 form-group")
                    input(type="text" id="idName" class="maintext form-control floating-label",placeholder="Enter your chat name(Nickname)")
            div(class="row")
                div(class="col-md-6 col-xs-8 form-group")
                    input(type="text" id="idRoom" class="maintext form-control floating-label",placeholder="Enter your private chat room name")
            div(class="row")
                div(class="col-md-6 col-xs-8")
                    button(class="maintext btn-google btnText btn btn-primary btn-lg" id="btnRoom") Create room
        script(src="./scripts/client.js" type="text/javascript")
        script(src="../lib/bootstrap-material-design/dist/js/ripples.js" type="text/javascript")
        script(src="../lib/bootstrap-material-design/dist/js/material.js" type="text/javascript")
