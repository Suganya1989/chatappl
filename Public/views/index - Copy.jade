doctype
html
    head
        script(src="/socket.io/socket.io.js")
        script(src="http://code.jquery.com/jquery-2.1.1.min.js")
        link(rel='stylesheet',href='../bootstrap.css')
        meta(name="viewport",content="width=device-width, initial-scale=1")
        style(type="text/css")
         |.maintext{
         |height:45px;
         |width :200px
         |}
         |.btn-google{
         |width: 200px;
         |}
         |.mycontent-left {
         |border-right: 1px solid #333;
         |}
         |.mycontent-right {
         |border-left: 1px solid #333;
         |}
         |.myContent{
         |margin-left:70px;
         |padding-right: 0px;
         |font-size: xx-large;
         |}
         |.btnText{
         | margin-bottom:10px;
         |}
         |.maindiv{
         | border:1px solid #333;
         |}

    body
        nav(class="navbar navbar-default", role="navigation")
            div( class="container-fluid")
                div(class="navbar-header")
                    a(class="navbar-brand",href="#") ChatApp :)

        div( class="container-fluid")
            div(class="row")
                div(class="col-md-6 col-md-offset-3")
                    h2 Chat with family and friends securely!!!
            div(class="container-fluid maindiv")
                div(class="row")
                    div(class="mycontent-left col-md-4 col-md-offset-2")
                        div(class="col-md-6 col-md-offset-2")
                            h4 Sign in with
                    div(class="col-md-3 col-md-offset-2")
                        h4 or with your ChatApp Id
                div(class="row-fluid")
                    div(class="mycontent-left col-md-4 col-md-offset-2")
                        //hr(class="vertical")
                        button(class="btnText btn-google col-md-6 col-md-offset-2 btn btn-primary btn-lg") Google
                    input(type="text",class="btnText col-md-3 col-md-offset-2 maintext",placeholder="Enter your Email Id")
                div(class="row-fluid")
                    div(class="mycontent-left col-md-4 col-md-offset-2")
                        button(class=" btn-google btnText col-md-6 col-md-offset-2 btn btn-primary btn-lg") Facebook
                        //p(class="myContent col-md-2 col-md-offset-3") (or)
                    input(type="text",class="btnText col-md-3 col-md-offset-2 maintext",placeholder="Enter your password")
                div(class="row-fluid")
                    div(class="mycontent-left col-md-4 col-md-offset-2")
                        button(class=" btn-google btnText col-md-6 col-md-offset-2 btn btn-primary btn-lg") Twitter
                    button(class=" btn-google btnText col-md-6 col-md-offset-2 btn btn-primary btn-lg") Sign in
                 div(class="row-fluid")
                    div(class="mycontent-left col-md-4 col-md-offset-2")
                        p(class="mycontent-left")
                    div(class="mycontent-right col-md-6 col-md-offset-6")
                        a(href="#" class="col-md-6 col-md-offset-4") Register now
